# Simple .htaccess for development - rename original to .htaccess.backup
RewriteEngine On

# Allow all PHP files in development
<Files "*.php">
    Require all granted
</Files>

# Only protect very sensitive files
<Files ".env">
    Require all denied
</Files>

<Files ".htpasswd">
    Require all denied
</Files>

# Allow everything else for now
<Directory ".">
    Require all granted
</Directory>
